@startuml User-Registration

skinparam ActivityBackgroundColor LightSkyBlue
skinparam ActivityBorderColor DarkBlue
skinparam ArrowColor DarkBlue

title "FalsoPay: User Registration Process"

start

:User opens FalsoPay app;
:User selects "Create New Account" option;

:System displays registration form;

:User enters personal information 
(name, email, phone number);

:User creates password;

:User accepts terms and conditions;

if (All information valid?) then (yes)
  :System validates email/phone uniqueness;
  
  if (Email/phone already registered?) then (yes)
    :Display "Account already exists" message;
    :Suggest login option;
    stop
  else (no)
    :Create user account;
    :Generate verification code;
    :Send verification email/SMS;
    
    :Display verification instructions;
    
    :User receives verification code;
    :User enters verification code;
    
    if (Verification code correct?) then (yes)
      :Activate user account;
      :Display welcome message;
      :Redirect to dashboard;
      stop
    else (no)
      :Display "Invalid code" message;
      :Allow user to request new code;
      
      if (User requests new code?) then (yes)
        :Generate new verification code;
        :Send new verification email/SMS;
        backward:Display verification instructions;
      else (no)
        :Keep account inactive;
        :Display registration incomplete message;
        stop
      endif
    endif
  endif
else (no)
  :Highlight invalid fields;
  :Display validation error messages;
  backward:User corrects information;
endif

stop

@enduml 